							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/reset-password/:token",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"reset-password",
								":token"
							],
							"variable": [
								{
									"key": "token",
									"value": "{{resetToken}}",
									"description": "Reset token from forgot-password response"
								}
							]
						},
						"description": "Reset password using token from forgot-password"
					},
					"response": []
				}
			],
